<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" styleClass="root" stylesheets="@/Css/Dashbord.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arion.Controller.BudgetViewController">
    <children>
        <VBox layoutX="50.0" layoutY="20.0" spacing="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <!-- Header Section -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" styleClass="header-icon" />
                                        <Label styleClass="header-title" text="Gestión de Presupuestos" />
                                    </children>
                                </HBox>
                                <Label styleClass="header-subtitle" text="Controla y administra tus presupuestos mensuales" />
                            </children>
                        </VBox>
                        <Button fx:id="addNewBudgetButton" text="+ Agregar Nuevo Presupuesto" styleClass="button-primary" style="-fx-background-radius: 5; -fx-padding: 12 20;">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <!-- Main Content Area -->
                <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Budgets Table -->
                        <VBox styleClass="card" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="section-title" text="Presupuestos Activos" style="-fx-padding: 0 0 15 0;">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="budgetsTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5;">
                                    <columns>
                                        <TableColumn fx:id="categoryCol" text="Categoría" prefWidth="150" />
                                        <TableColumn fx:id="limitAmountCol" text="Límite" prefWidth="120" />
                                        <TableColumn fx:id="spentAmountCol" text="Gastado" prefWidth="120" />
                                        <TableColumn fx:id="remainingCol" text="Restante" prefWidth="120" />
                                        <TableColumn fx:id="progressCol" text="Progreso" prefWidth="180" />
                                        <TableColumn fx:id="actionsCol" text="Acciones" prefWidth="120" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Alerts Panel -->
                        <VBox spacing="20.0" prefWidth="350.0">
                            <VBox styleClass="card" spacing="15.0">
                                <children>
                                    <Label styleClass="section-title" text="Alertas de Presupuesto">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <ListView fx:id="alertsListView" prefHeight="200.0" style="-fx-background-radius: 5;" />
                                </children>
                            </VBox>

                            <!-- Quick Stats -->
                            <VBox styleClass="card" spacing="15.0">
                                <children>
                                    <Label styleClass="section-title" text="Resumen">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <VBox spacing="10.0">
                                        <children>
                                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                <children>
                                                    <Label text="Total Presupuestado:" styleClass="stats-label" />
                                                    <Region HBox.hgrow="ALWAYS" />
                                                    <Label fx:id="totalBudgetedLabel" text="0.00" styleClass="stats-value" />
                                                </children>
                                            </HBox>
                                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                <children>
                                                    <Label text="Total Gastado:" styleClass="stats-label" />
                                                    <Region HBox.hgrow="ALWAYS" />
                                                    <Label fx:id="totalSpentLabel" text="0.00" styleClass="stats-value" />
                                                </children>
                                            </HBox>
                                            <Separator />
                                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                <children>
                                                    <Label text="Presupuestos Activos:" styleClass="stats-label" />
                                                    <Region HBox.hgrow="ALWAYS" />
                                                    <Label fx:id="activeBudgetsLabel" text="0" styleClass="stats-value" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                </children>
                            </VBox>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
